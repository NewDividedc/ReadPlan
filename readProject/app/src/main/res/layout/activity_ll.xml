<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="#FFF5F5F5">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:id="@+id/inner_login"
        android:paddingBottom="10dip"
        android:background="#FFF5F5F5">

        <ImageView android:id="@+id/doubanLogo"
            android:paddingTop="10dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="20dip"
            android:paddingBottom="10dip"
            android:paddingRight="20dip"
            android:src="@drawable/douban_logo"
            android:scaleType="centerInside">
        </ImageView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:paddingTop="5dip"
            android:layout_below="@id/doubanLogo"
            android:layout_height="fill_parent"
            android:background="@drawable/content_bg"
            android:id="@+id/section1">

            <TextView
                android:id="@+id/l_section1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="用户登录" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@id/l_section1"
                android:layout_height="wrap_content"
                android:id="@+id/wrapper">

                <EditText android:text=""
                    android:id="@+id/EditTextEmail"
                    android:hint="输入电子邮件地址"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dip"
                    android:background="@android:drawable/editbox_background"
                    android:layout_below="@id/wrapper"/>


                <EditText android:text=""
                    android:id="@+id/EditTextPassword"
                    android:hint="输入密码"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dip"
                    android:password="true"
                    android:layout_below="@id/EditTextEmail"/>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/EditTextPassword">
                    <Button android:text="登录"
                        android:id="@+id/btnLogin"
                        android:width="100dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/wp_button_small"
                        android:layout_height="wrap_content"
                        android:onClick="btnUserLogin"/>
                    <Button android:text="返回"
                        android:id="@+id/btnExit"
                        android:width="100dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/wp_button_small"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>