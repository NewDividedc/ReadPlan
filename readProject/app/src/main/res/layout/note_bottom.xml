<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="50dp"
        app:cardBackgroundColor="@color/black"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <ImageView
        android:id="@+id/noteclear"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:src="@drawable/note_clear2"
        android:gravity="center"
        android:layout_marginLeft="0.8dp"
        android:textColor="@android:color/white"/>
   <ImageView
        android:id="@+id/fontchange"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:src="@drawable/note_font"
        android:gravity="center"
        android:layout_marginLeft="0.8dp"
        android:textColor="@android:color/white"/>
    <ImageView
        android:id="@+id/fontsizechange"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:src="@drawable/fontsize"
        android:gravity="center"
        android:layout_marginLeft="0.8dp"
        android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/notescreenshot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/cut"
            android:gravity="center"
            android:layout_marginLeft="0.8dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>